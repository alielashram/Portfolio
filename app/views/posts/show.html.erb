<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p id="author">
  <b>By:</b>
  <%= @post.author.email.capitalize %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>
<hr>
<% if policy(@post).update? %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
</article>
<%= render "comments/form" %>
<p class="back_link"><%= link_to 'Back to the blog', posts_path %></p>
